<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>
  <div class="form-group">
    First Name: <%= f.text_field :first_name, class: 'form-control' %><br>
  </div>
  <div class="form-group">
    Last Name: <%= f.text_field :last_name, class: 'form-control' %><br>
  </div>
  <div class="form-group">
    Email: <%= f .text_field :email, class: 'form-control' %><br>
  </div>
  <div class="form-group">
    Password: <%= f.text_field :password, class: 'form-control' %><br>
  </div>
  <div class="form-group">
    Password Confirmation: <%= f.text_field :password_confirmation, class: 'form-control' %><br>
  </div>
  <div class="form-group">
    Role: <%= f.select :role, User.roles.keys, {}, {class: 'form-control'} %><br>
  </div>
  <%= f.submit "Signup", class: 'btn btn-success' %>
  <% end %>